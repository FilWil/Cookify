<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cookify.Views.AddIngredientPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ingredient name"/>
            <Entry Placeholder="" x:Name="EntryIngredientName" Text="{Binding IngName, Mode=TwoWay}"/>
            <Button Text="Add ingredient" x:Name="ButtonAddIngredient" Command="{Binding AddNewIngredientCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>