<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cookify.Views.DetailRecipePage">
    <ContentPage.Content>
        <Grid>
            <!--Top row-->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--Bottom row-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" >
                <Label Text="DISH NAME" HorizontalOptions="CenterAndExpand" FontSize="40"/>
                <Label />
                <Image />
                <Label />
                <Label Text="CATEGORY" HorizontalOptions="CenterAndExpand" FontSize="Micro"/>
                <Label />
                <Label />
                <Label Text="DESCRIPTIONDESCRIPTION" HorizontalOptions="CenterAndExpand" FontSize="Medium"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>